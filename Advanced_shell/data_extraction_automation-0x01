#!/bin/bash

DATA_FILE="data.json"

# Extract data
name=$(jq -r '.name' "$DATA_FILE" | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' "$DATA_FILE" | sed 's/.*/\u&/')
height=$(jq -r '.height' "$DATA_FILE")
weight=$(jq -r '.weight' "$DATA_FILE")

# Format units
formatted_height=$(awk "BEGIN { printf \"%.1f\", $height / 10 }")
formatted_weight=$(awk "BEGIN { printf \"%.0f\", $weight / 10 }")

# Print exact expected format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
